datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int     @id @default(autoincrement())
  username  String  @unique
  password  String
  email     String  @unique
  firstName String
  lastName  String
  telegram  String?
  //verificate Boolean
  role      Role
}

enum Role {
  Admin
  Teacher
  Student
}

